{
  "name": "oxid",
  "version": "0.0.1",
  "description": "",
  "main": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "engines": {
    "npm": ">=3.0.0",
    "node": ">=4.2.4"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "nyc": {
    "include": [
      "src/*.ts",
      "src/**/*.ts"
    ],
    "exclude": [
      "node_modules"
    ],
    "extension": [
      ".ts"
    ],
    "reporter": [
      "json",
      "html",
      "text-summary",
      "lcov"
    ],
    "all": true,
    "produce-source-map": true,
    "sourceMap": true
  },
  "lint-staged": {
    "*.{ts,js}": [
      "prettier --write --single-quote --print-width 120 --jsx-bracket-same-line true",
      "tslint --fix",
      "git add"
    ]
  },
  "scripts": {
    "prepublishOnly ": "npm-run-all prepush test:*",
    "prepare": "npm run build",
    "precommit": "lint-staged",
    "prepush": "npm-run-all lint:* build test:unit",
    "commitmsg": "commitlint -e",
    "test:unit": "cross-env TS_NODE_TRANSPILE_ONLY=true mocha --reporter dot --require ts-node/register --require source-map-support/register --recursive --bail \"spec/**/*.ts\"",
    "test:coverage": "cross-env TS_NODE_TRANSPILE_ONLY=true nyc npm run test:unit",
    "test:karma": "karma start --single-run",
    "lint:code": "tslint -c tslint.json -p tsconfig.json \"src/**/*.ts\" \"spec/**/*.ts\"",
    "lint:circular": "depcruise --validate .dependency-cruiser.json -x \"^node_modules\" src",
    "build": "npm-run-all build:clean build:metadata && tsc",
    "build:metadata": "ts-node ./scripts/buildMetadata.ts",
    "build:clean": "shx rm -rf ./dist",
    "commit": "git-cz -S",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kwonoj/oxid.git"
  },
  "keywords": [
    "Rx",
    "RxJS",
    "ReactiveX",
    "ReactiveExtensions",
    "Streams",
    "Observables",
    "Observable",
    "Stream",
    "ES6",
    "ES2015",
    "http",
    "xmlhttprequest",
    "ajax"
  ],
  "author": "OJ Kwon <kwon.ohjoong@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kwonoj/oxid/issues"
  },
  "homepage": "https://github.com/kwonoj/oxid#readme",
  "devDependencies": {
    "@commitlint/cli": "^7.0.0",
    "@commitlint/config-angular": "^7.0.1",
    "@types/chai": "^4.1.4",
    "@types/chai-subset": "^1.3.1",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.9.4",
    "@types/sinon": "^5.0.2",
    "chai": "^4.1.2",
    "chai-subset": "^1.6.0",
    "commitizen": "2.10.1",
    "conventional-changelog-cli": "^2.0.1",
    "cross-env": "^5.2.0",
    "cz-conventional-changelog": "2.1.0",
    "dependency-cruiser": "^4.5.1",
    "husky": "^0.14.3",
    "karma": "^3.0.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-mocha": "^1.3.0",
    "karma-webpack": "^3.0.5",
    "lint-staged": "^7.2.0",
    "mocha": "^5.2.0",
    "npm-run-all": "^4.1.3",
    "nyc": "^13.0.1",
    "prettier": "^1.14.0",
    "rewiremock": "^3.7.8",
    "rxjs": "^6.3.2",
    "shx": "^0.3.2",
    "sinon": "^6.3.3",
    "source-map-support": "^0.5.9",
    "ts-loader": "^5.1.0",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-no-unused-expression-chai": "^0.1.3",
    "typescript": "^3.0.3",
    "url-search-params-polyfill": "^5.0.0",
    "webpack": "^4.19.0"
  },
  "peerDependencies": {
    "rxjs": "6.x"
  },
  "dependencies": {
    "follow-redirects": "^1.5.8",
    "getroot": "^1.0.0",
    "is-buffer": "^2.0.3",
    "tslib": "^1.9.3"
  }
}
